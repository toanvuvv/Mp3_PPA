<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/relative_layout"
    tools:context="com.example.baitap.mp3player.MainActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
       android:background="@color/pager_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        >
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/pager_background"
       />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout"
        android:layout_above="@+id/rlt_current_playing_bar"/>

    <RelativeLayout
        android:id="@+id/rlt_current_playing_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/pager_background">
        <LinearLayout
            android:id="@+id/current_playing_bar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground">
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_album_current_bar"
                    android:src="@drawable/default_cover_big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:civ_border_width="0.5dp"
                    android:layout_centerInParent="true"
                    app:civ_border_color="#FF000000"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_song_title_current"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/list_song"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"/>
                <TextView
                    android:id="@+id/tv_artist_current"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/artist_list"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:id="@+id/btn_pre_current"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pb_prev"/>
                <ImageView
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:id="@+id/btn_play_pause_current"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pb_pause"/>
                <ImageView
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:id="@+id/btn_next_current"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pb_next"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
