<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"


   >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/avatar_song"
        android:src="@drawable/default_cover_big"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/rlt_button_add"
        android:layout_centerVertical="true"

        >

        <ImageButton
            android:layout_margin="15dp"
            android:id="@+id/add_to_play"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_action_ic_add_to_np"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <LinearLayout

        android:id="@+id/lnLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar_song"
        android:layout_toLeftOf="@+id/rlt_button_add"
        android:layout_margin="10dp"

        >
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvTenBaiHat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Duyên phận"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvCaSi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="Jang Mi"
            android:textSize="13dp"
            android:textColor="@color/black"
            />


    </LinearLayout>

</RelativeLayout>